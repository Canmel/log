<div class="cl-sidebar" data-position="right" data-step="1" data-intro="<strong>Fixed Sidebar</strong> <br/> It adjust to your needs." >
  <div class="cl-toggle"><i class="fa fa-bars"></i></div>
  <div class="cl-navblock">
    <div class="menu-space">
      <div class="content">
        <div class="side-user">
          <div class="avatar"> <%= image_tag 'avatar1_50.jpg', alt: "Avatar" %></div>
          <div class="info">
            <a ><%= current_user.name %></a>
            <%= image_tag 'state_online.png', alt: "Status" %><span>Online</span>
          </div>
        </div>
        <ul class="cl-vnavigation">
          <% load_menus(Menu.resource_types[:one_level], nil).each do |menu| %>
              <li>
                <a><i class="fa fa-smile-o"></i><span><%= menu.name %></span></a>
              </li>
              <ul class="sub-menu" style="display: none;">
                <% load_menus(Menu.resource_types[:two_level],menu.id).each do |menu_link| %>
                    <% if is_current_url?(menu_link.source) %>
                      <li class="active"><a href="<%= menu_link.source %>"><%= menu_link.name %></a></li>
                    <% else %>
                      <li><a href="<%= menu_link.source %>"><%= menu_link.name %></a></li>
                    <% end %>
                <% end %>
              </ul>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="text-right collapse-button" style="padding:7px 9px;">
      <input type="text" class="form-control search" placeholder="Search..." />
      <button id="sidebar-collapse" class="btn btn-default" style=""><i style="color:#fff;" class="fa fa-angle-left"></i></button>
    </div>
  </div>
</div>

<script>
  $(function () {
    init_menus();
load_menu_after_page();
  })
</script>