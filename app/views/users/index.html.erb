<%= render 'shared/crumbs', menu: '系统管理' ,title: "用户信息" %>


<div class="cl-mcont">
  <div class="head">
    <h3>查询</h3><hr/>
    <%= search_form_for @q, :html => {:class => 'pjax-form'} do |f| %>
        <div class="form-group col-md-4">
          <%= f.label "邮箱：", class: "control-label col-md-3" %>
          <div class="col-md-9">
            <%= f.search_field :email_cont, class: 'form-control' %>
          </div>
        </div>
        <%= link_to '新增', :new_user, class: "btn btn-info"%>
        <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#search_model">查询</button>
    <% end %>
  </div>
</div>
<div class="cl-mcont">
  <div class="content">
    <div class="table-responsive">
      <table class="table no-border hover">
        <thead class="no-border">
        <tr>
          <th style="width:30%;"><strong>姓名</strong></th>
          <th class="text-right"><strong>邮箱</strong></th>
          <th style="width:15%;"><strong>角色</strong></th>
          <th style="width:15%;" class="text-center"><strong>Action</strong></th>
        </tr>
        </thead>
        <tbody class="no-border-y">
        <% @users.each_with_index do |user, index| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.roles.pluck(:name) %></td>
              <td class="text-center"><a class="label label-default" href="#"><i class="fa fa-pencil"></i></a> <a class="label label-danger" href="#"><i class="fa fa-times"></i></a></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




<%= current_user.name %>
</div>